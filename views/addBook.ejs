<%- include('layout/header') %>
<div class="container">
    <div class="row">
        <div class="col-lg-6 mx-auto mt-4">
            <div class="card shadow">
                <div class="card-header bg-primary">
                    <h5 class="text-light">Add New Book</h5>
                </div>
                <div class="card-body p-4">
                    <form action="/add" method="post" id="add-form" >
                        <div class="mb-3">
                            <label for="title">Title</label>
                            <input type="text" name="title" class="form-control form-control-lg" placeholder="Enter Title" required/>
                        </div>
                        <div class="mb-3">
                            <label for="author">Author</label>
                            <input type="text" name="author" class="form-control form-control-lg" placeholder="Enter Author" required/>
                        </div>
                        <div class="mb-3">
                            <label for="published_year">Year</label>
                            <input type="number" name="published_year" class="form-control form-control-lg" placeholder="Enter Year" required/>
                        </div>
                        <div class="mb-3">
                            <label for="pages">Number of pages</label>
                            <input type="number" name="pages" class="form-control form-control-lg" placeholder="Enter Number of pages" required/>
                        </div>
                        <div class="mb-3">
                            <label for="genre">Genre</label>
                            <input type="text" name="genre" class="form-control form-control-lg" placeholder="Enter Genre" required/>
                        </div>
                       
                        <div class="mb-3">
                            <input type="submit" name="submit" value="Add Book" class="btn btn-primary btn-lg" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('layout/footer') %>
